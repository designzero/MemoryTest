            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#00000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#10000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#20000000" />
